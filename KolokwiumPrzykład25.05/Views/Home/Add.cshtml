@model HardwareModel

<h2>Dodawanie sprzętu komputerowego</h2>
<form method="post">
    <div class="form-group">
        <label>Nazwa</label>
        <input type="text" class="form-control" asp-for="Hardware.Name" />
    </div>
    <div class="form-group">
        <label>Firma</label>
        <select class="form-control" asp-for="Hardware.CompanyId" asp-items="@ViewBag.Companies"></select>
    </div>
    <div class="form-group">
        <label>Rok</label>
        <input type="number" class="form-control" asp-for="Hardware.Year" />
    </div>
    <div class="form-group">
        <label>Cena</label>
        <input type="text" class="form-control" asp-for="Hardware.Price" />
    </div>
    <div class="form-group">
        <label>Ilość</label>
        <input type="number" class="form-control" asp-for="Hardware.Amount" />
    </div>
    <div class="form-group">
        <label>Opis</label>
        <textarea class="form-control" asp-for="Hardware.Description"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-primary float-right">Zapisz</button>
</form>